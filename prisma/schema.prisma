// This is your Prisma schema file,
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model KpiCard {
  id          String     @id @default(uuid())
  name        String     // Card name (e.g., "Coils/HR")
  minValue    Float      // Minimum allowed/generated value
  maxValue    Float      // Maximum allowed/generated value
  benchmark   Float      // Target value
  achieved    Float?     // Actual achieved value
  date        DateTime?  // Date for the value
  order       Int        @default(0) // For layout
  isDefault   Boolean    @default(false) // Whether this card is shown by default
  isVisible   Boolean    @default(true) // Whether this card is currently visible on the dashboard
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
